<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Nome</th>
      <th>Sobrenome</th>
      <th>Tel</th>
      <th>Endereço</th>
      <th>Número de Dogs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <% @numeroDogs = cliente.dogs.length %>
      <tr>
        <td><%= cliente.email %></td>
        <td><%= cliente.nome %></td>
        <td><%= cliente.sobrenome %></td>
        <td><%= cliente.tel %></td>
        <td><%= cliente.endereco %></td>
        <td><%= @numeroDogs %> </td>
        <td><%= link_to 'Mostrar', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destruir', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
