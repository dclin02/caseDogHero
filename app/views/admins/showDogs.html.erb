<p id="notice"><%= notice %></p>

<h1>Dogs</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Nome</th>
      <th>Raça</th>
      <th>Genero</th>
      <th>Idade</th>
      <th>Porte</th>
      <th>Castrado</th>
      <th>Vacinado contra Raiva?</th>
      <th>Vacinas v8/v10?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
      <%if cliente.dogs.any? then %>
        <td><%= cliente.email %></td>
        <td></td><td></td><td></td><td></td>
        <td></td><td></td><td></td><td></td>
        <td><%= link_to 'Mostrar', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destruir', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <tr>
        <% cliente.dogs.each do |dog| %>
            <td></td>
            <td><%= dog.nome %></td>
            <td><%= dog.raca %></td>
            <td><%= dog.genero %></td>
            <td><%= dog.idade %></td>
            <td><%= dog.porte %></td>
            <td><%= dog.castrado ? "Sim" : "Não" %></td>
            <td><%= dog.raiva ? "Sim" : "Não" %></td>
            <td><%= dog.vacinas ? "Sim" : "Não" %></td>
            <td><%= link_to 'Mostrar', [cliente, dog] %></td>
            <td><%= link_to 'Editar', edit_cliente_dog_path(cliente, dog) %></td>
            <td><%= link_to 'Destruir', [cliente, dog], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
