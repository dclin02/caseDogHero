<p id="notice"><%= notice %></p>

<h1>Dogs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Raca</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.raca %></td>
        <td><%= dog.cliente.nome %></td>
        <td><%= link_to 'Show Client', [@cliente] %></td>
        <td><%= link_to 'Edit Dog', edit_cliente_dog_path(@cliente, dog) %></td>
        <td><%= link_to 'Destroy Dog', [@cliente, dog], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dog', new_cliente_dog_path(@cliente) %>
